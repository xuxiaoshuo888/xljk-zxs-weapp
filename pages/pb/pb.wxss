/* pages/pb/pb.wxss */
.week {
  display: flex;
  align-items: stretch;
  justify-content: space-around;
}

.week-item {
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  color: #3b4859;
  line-height: 22px;
  padding-bottom: 8px;
}

.date-view {
  display: block;
}

.rq {
  font-size: 14px;
  font-weight: 400;
  text-align: center;
  color: #8998ac;
  line-height: 20px;
  padding-bottom: 8px;
}

.day {
  background: #f4f5f9;
  border-radius: 4px;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(50, 182, 122, 1);
  margin-bottom: 8px;
  font-size: 14px;
  transition: all ease 0.5s;
  box-shadow: 0px 3px 10px 0px rgba(197, 201, 213, 0.55);
}
.day:active{
  transform: scale(1.3);
  box-shadow: 0px 3px 10px 0px rgba(197, 201, 213, 0);
}
