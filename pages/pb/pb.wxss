  transform: scale(1.3);
  box-shadow: 0px 3px 10px 0px rgba(197, 201, 213, 0);
} */
.sticky {
  position: sticky;
}

.status-view {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px;
  background: #f9fafc;
}

.status-view-item {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 12px;
  font-weight: 400;
  text-align: left;
  color: #8998ac;
  line-height: 17px;
}

.status-band {
  width: 13px;
  height: 5px;
  margin-right: 5px;
}

.wyy {
  background-color: #32b67a;
}

.yyy {
  background-color: rgba(241, 101, 72, 1);
}
.xz{
  background-color: #408bfb;
}

.currentItem {
  padding: 15px;
}

.currentItem-title {
  margin-bottom: 10px;
  font-size: 16px;
  font-weight: 500;
  text-align: left;
  color: #3b4859;
  line-height: 22px;
}

.currentItem-content {
  font-size: 14px;
  font-weight: 400;
  text-align: left;
  color: #5a617c;
  line-height: 20px;
  margin-bottom: 10px;

}

.click-wyy{
  background-color: #f2ffef;
  color: #32b67a;
}
.click-yyy{
  background-color: #ffdfc7;
  color: #f16548;
}
.click-xz{
  background-color: #c7ebff !important;
  color: #408bfb !important;
}
.calendar{
  padding-bottom: 20px;
}